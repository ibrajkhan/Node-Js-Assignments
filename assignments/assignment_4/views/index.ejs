<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="./style.css" />
  </head>

  <body>
    <div>
      <% users.forEach((user)=>{ %>
      <div>
        <% if (user.isPromoted==null){%>
        <div class="null">
          <h2><%= user.name%></h2>
          <p><%= user.email%></p>
        </div>
        <% } else if(user.isPromoted==true) { %>
        <div class="promoted">
          <h2><%= user.name%></h2>
          <p><%= user.email%></p>
        </div>
        <% } else if(user.isPromoted==false){ %>
        <div class="demoted">
          <h2><%= user.name%></h2>
          <p><%= user.email%></p>
        </div>
        <%}%>
        <form method="POST" action="/users/<%= user._id %>?_method=PUT">
          <button id="edit-<%= user.name %>" type="submit">
            Prometed/Demoted
          </button>
        </form>
        <form method="POST" action="/users/<%= user._id %>?_method=DELETE">
          <button id="delete-<%= user.name %>">Delete</button>
        </form>
      </div>
      <%}) %>
      <br />
      <button><a href="/form">Add</a></button>
    </div>
  </body>
</html>
